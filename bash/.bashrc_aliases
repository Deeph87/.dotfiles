# kubectl
alias k="kubectl"

# AWS
alias awsnoob="aws --cli-auto-prompt"
alias kwp="watch -n1 'kubectl get pods | grep'"
alias grep="grep --color"
alias scalagrep="grep -nri --include=*.scala"
alias pygrep="grep -nri --include=*.py"
alias confgrep="grep -nri --include=*.{conf,yaml,yml}" 
alias tsgrep="grep -nri --include=*.ts --exclude-dir={node_modules,build,dist}"
alias groovygrep="grep -nri --include=*.{groovy,Jenkinsfile}"
alias fullgrep="grep -nri --exclude-dir={node_modules,build,dist}"
alias packagegrep="grep -nri --include=package.json"
alias p="cd ~/projects"
alias op="ls ~/projects | fzf"
alias sb="source ~/.bashrc"
alias p="cd ${PROJECTS_DIRECTORY}; browse ."
alias psubl="cd ${PROJECTS_DIRECTORY}; browse .; subl -n ."
alias pcode="cd ${PROJECTS_DIRECTORY}; browse .; code ."
alias pnvim="cd ${PROJECTS_DIRECTORY}; browse .; nvim ."
alias d="cd \"${DESKTOP_DIRECTORY}\"; browse ."
alias bashrc="subl ~/.bashrc"
alias f="browse ."
alias uuid='od -x /dev/urandom | head -1 | awk '\''{OFS="-"; print $2$3,$4,$5,$6,$7$8$9}'\'''
alias git-tags="python $PROJECTS_DIRECTORY/python-toolbox/git/fetch_tags.py "
alias git-libs="python $PROJECTS_DIRECTORY/python-toolbox/git/lib_versions.py "
alias git-libs_usage="python $PROJECTS_DIRECTORY/python-toolbox/git/lib_usage.py "
alias cmds="cat ~/commands_templates | fzf"
alias subl="subl -n"

if [ $OSTYPE == "msys" ]; then
    alias stow='MSYS="winsymlinks:nativestrict" stow'
    alias pidea="cd ${PROJECTS_DIRECTORY}; browse .; start idea64.exe ."
else
    if grep -qi "microsoft\|wsl" /proc/version 2>/dev/null; then
        # Code spécifique à WSL
        alias pidea="cd ${PROJECTS_DIRECTORY}; browse .; setsid idea64.exe . > /dev/null 2>&1 &"
        alias psubl="cd ${PROJECTS_DIRECTORY}; browse .; subl.exe -n ."
    else
        # Code pour Linux natif
        alias pidea="cd ${PROJECTS_DIRECTORY}; browse .; nohup idea . > /dev/null 2>&1 &"
    fi
fi
