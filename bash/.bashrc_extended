# .bashrc
eval "$(fzf --bash)"
eval "$(starship init bash)"

if [ -f ~/.bashrc_env ]; then
    source ~/.bashrc_env
fi

if [ -f ~/.bashrc_env_specific ]; then
    source ~/.bashrc_env_specific
fi

if [ -f ~/.bashrc_functions ]; then
    source ~/.bashrc_functions
fi

if [ -f ~/.bashrc_functions_specific ]; then
    source ~/.bashrc_functions_specific
fi

if [ -f ~/.bashrc_aliases ]; then
    source ~/.bashrc_aliases
fi

if [ -f ~/.bashrc_aliases_specific ]; then 
    source ~/.bashrc_aliases_specific
fi
