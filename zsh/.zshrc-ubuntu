# .env
EDITOR=vim
XDG_CACHE_HOME=$HOME/.cache
XDG_CONFIG_HOME=$HOME/.config
XDG_DATA_HOME=$HOME/.local/share
XDG_STATE_HOME=$HOME/.local/state

# Lines configured by zsh-newuser-install
HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=1000
bindkey -v
# End of lines configured by zsh-newuser-install
# The following lines were added by compinstall
zstyle :compinstall filename '/home/jhaudry/.zshrc'

# Path
LOCAL_SCRIPTS_PATH=$HOME/.local/scripts
PATH=$PATH:$LOCAL_SCRIPTS_PATH

autoload -Uz compinit
compinit
# End of lines added by compinstall

# Prompt
autoload -Uz promptinit
promptinit

# zsh-syntax-highlighting
# source ~/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source /usr/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh 
eval "$(starship init zsh)"

# nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# kubectl
alias k="kubectl"
alias kdev="export KUBECONFIG=~/.kube/config_DEV_SSO"
alias kprod="export KUBECONFIG=~/.kube/config_PROD_SSO"

# pnpm
export PNPM_HOME="/home/jhaudry/.local/share/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac
# pnpm end

# shortcuts
alias @home="jhaudry"
alias @dotfiles="cd ~/dotfiles/"

# python
alias python=python3
alias ave="source ./.venv/bin/activate"

# utils
alias kwp="watch -n1 'kubectl get pods | grep'"

# AD
alias aal="aws-azure-login"
